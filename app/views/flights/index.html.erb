<h2>All Flights</h2>

<% if !current_user.admin %>

    <% @flights.each do |flight| %>
    <%= link_to "Go to #{flight.destination}", flight_path(flight) %><br>
    <% end %>

  <br></br>


<% else %>

  <% @flights.each do |flight| %>
  Name <%= flight.name %><br>
  Destination: <%= flight.destination %>
  <h4><%= link_to "Edit Flight #{flight.name}", edit_flight_path(flight) %></h4>
  <% end %>



  <br></br>

  <h2>Create a New Flight</h2>
  <%= form_for(@flight) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :destination %>
  <%= f.text_field :destination %><br>

  <%= f.submit %>
  <% end %><br>

  <h3><%= link_to "See Bookings", bookings_path %></h3>
  <br></br>

<% end %>

<h3><%= link_to "Log Out", '/sessions/destroy' %></h3>
