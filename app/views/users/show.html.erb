<% if @user.admin %>
  <h1>ADMIN</h1>
<% else %>

<h1><%= @user.name %>'s Booked Flights </h1>

  <% @user.flights.each do |flight| %>
    <% flight.bookings.each do |b| %>
      <% if b.paid == 0 %>
        <%= "***PAYMENT REQUIRED***"%>
      <% end %>
    <% end %><br>

    <%= flight.name %><br>
    <%= link_to flight.destination, flight_path(flight) %><br></br>

  <% end %><br>


<% end %>

 <br></br>

 <%= link_to "See All Flights", flights_path %><br>
