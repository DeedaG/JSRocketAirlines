<h1>New Account</h1>

  <%= form_for @user do |f|%>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :admin %>
  <%= f.check_box :admin %>

      <%= f.submit 'Create New Account'%>

  <% end %>
